<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BABABA">

    <!-- Top Spikes -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/spikes_base" />

    <!-- Game Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/futura"
        android:text="SPIKE\nDASH"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="64sp"
        android:textStyle="bold" />

    <!-- Bird Image -->
    <ImageView
        android:id="@+id/birdImage"
        android:layout_width="144dp"
        android:layout_height="100dp"
        android:layout_below="@id/titleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/bird" />

    <!-- Main Center Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/birdImage"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <!-- Play Button -->
        <LinearLayout
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_item_selector"
            android:layout_marginTop="140dp"
            android:gravity="center"
            android:padding="16dp"
            android:elevation="2dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_resume" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/futura"
                android:text="PLAY"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Left Side Circular Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- Settings Button -->

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_button_background"
            android:src="@drawable/ic_settings"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:contentDescription="Store"/>

        <!-- gift Button -->

        <ImageButton
            android:id="@+id/btnGift"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_button_background"
            android:src="@drawable/ic_gift"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:contentDescription="Gift"/>


        <!-- Store Button -->
        <ImageButton
            android:id="@+id/btnStore"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_button_background"
            android:src="@drawable/ic_store"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:contentDescription="Store"/>

        <!-- 1v1 Button -->
        <ImageButton
            android:id="@+id/btn1v1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_button_background"
            android:src="@drawable/ic_1v1"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:contentDescription="1v1 Mode"/>

        <!-- Leaderboard Button -->
        <ImageButton
            android:id="@+id/btnLeaderboard"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_button_background"
            android:src="@drawable/ic_trophy"
            android:padding="12dp"
            android:elevation="2dp"
            android:contentDescription="Leaderboard"/>
    </LinearLayout>

    <!-- Right Side Circular Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:layout_marginEnd="16dp">

        <!-- Profile Button -->

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_button_background"
            android:src="@drawable/ic_stats"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:contentDescription="Inventory"/>

        <!-- Inventory Button -->

        <ImageButton
            android:id="@+id/btnInventory"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_button_background"
            android:src="@drawable/ic_inventory"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:contentDescription="Bot Mode"/>

        <!-- Bot Mode Button -->
        <ImageButton
            android:id="@+id/btnBotMode"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_button_background"
            android:src="@drawable/ic_bot"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:contentDescription="Bot Mode"/>

        <!-- Game Mode Button -->
        <ImageButton
            android:id="@+id/btnMode"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_button_background"
            android:src="@drawable/ic_mode"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:contentDescription="Game Modes"/>

        <!-- Difficulty Button -->
        <ImageButton
            android:id="@+id/btnDifficulty"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_button_background"
            android:src="@drawable/ic_difficulty"
            android:padding="12dp"
            android:elevation="2dp"
            android:contentDescription="Difficulty"/>
    </LinearLayout>

    <!-- Bottom Spikes -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/spikes_base" />

</RelativeLayout>